
@page "/welcome-page"
@using Week9_1.BlazorDI.Services;
@using Week9_1.Shared.Helpers
@using Microsoft.Extensions.Localization
@inject IToasterService toastService
@inject IStringLocalizer<CommonTranslations> Localizer

<h3>WelcomePage</h3>

@code
{
    protected override void OnAfterRender(bool firstRender)
    {
        toastService.ShowWarning(Localizer[CommonTranslationKeys.WelcomeMessage]);

        base.OnAfterRender(firstRender);
    }
}
